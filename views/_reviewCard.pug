mixin reviewCard (user, text, rating)
    div.reviews__card
        div.reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${user.photo}`, alt=`${user.name}`)
            h6.reviews__user= user.name
        p.reviews__text= text
        div.reviews__rating
            each i in [1, 2, 3, 4, 5]
                - if (i <= rating)
                    svg.reviews__star.reviews__star--active
                        use(xlink:href="/img/icons.svg#icon-star")
                - else
                    svg.reviews__star.reviews__star--inactive
                        use(xlink:href="/img/icons.svg#icon-star")